{
    "compilerOptions": {
        "baseUrl": ".",
        "target": "ESNext",
        "module": "NodeNext",
        "outDir": "dist",
        "rootDir": "src",
        "moduleResolution": "nodenext",
        "sourceMap": true,
        "declaration": true,
        "removeComments": true,
        "strict": true,
        "esModuleInterop": true,
        "paths": {
            "@/*": ["src/*"]
        }
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
}